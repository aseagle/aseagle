{% extends 'AseagleBundle::seller_layout.html.twig' %}

    {% block seller_content %}
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Main Office</h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-6">
                <img class="img-responsive" src="assets\avatar_750_500.png" alt="">
            </div>

            <div class="col-md-6">
                <h3>Address</h3>
                <ul>
                    <li>Address: {{ company_profile.opsAddress }}</li>
                    <li>City: {{ company_profile.opsCity }}</li>
                    <li>Country: {{ company_profile.opsCountry.name }}</li>
                </ul>
                <h3>Person In Charge</h3>
                <ul>
                    <li>Person: {{ company_profile.legalOwner }}</li>
                    <li>Duty</li>
                    <li>Telephone: {{ company_profile.phoneNumber }}</li>
                </ul>
            </div>

        </div>
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Oversea Offices</h1>
            </div>
        </div>
        <!-- /.row -->
        {% for o in oversea_offices %}
            <!-- Portfolio Item Row -->
            <div class="row">
                <div class="col-md-6">
                    <img class="img-responsive" width="500" height="300" src="{{ image_helper.generate_one_large_image_url(o.image) }}" alt="">
                </div>

                <div class="col-md-6">
                    <h3>Address</h3>
                    <ul>
                        <li>Address: {{ o.address }}</li>
                        <li>City: {{ o.city }}</li>
                        <li>Country: {{ o.country.name }}</li>
                    </ul>
                    <h3>Person In Charge</h3>
                    <ul>
                        <li>Person: {{ o.personInCharge }}</li>
                        <li>Duty: {{ o.dutires }}</li>
                        <li>Telephone: {{ o.telephone }}</li>
                    </ul>
                </div>
            </div>
            <hr>
        {% endfor %}

    {% endblock %}
