{% extends 'AseagleBundle::seller_layout.html.twig' %}

    {% block seller_content %}
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Awards</h1>
            </div>
        </div>
        <!-- /.row -->
        {% for a in awards %}
            <!-- Portfolio Item Row -->
            <div class="row">
                <div class="col-md-6">
                    <img class="img-responsive" width="500" height="300" src="{{ image_helper.generate_one_large_image_url(a.image) }}" alt="">
                </div>

                <div class="col-md-6">
                    <h3>{{ a.name }}</h3>
                    <ul>
                        <li>Issued By: {{ a.issuedBy|date("d/m/Y") }}</li>
                        <li>Start Date: {{ a.startDate|date("d/m/Y") }}</li>
                        <li>Description: {{ a.description }}</li>
                    </ul>
                </div>
            </div>
            <hr>
        {% endfor %}

    {% endblock %}
