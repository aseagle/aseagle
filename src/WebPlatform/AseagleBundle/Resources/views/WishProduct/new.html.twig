{% extends 'AseagleBundle::dashboard_layout.html.twig' %}
{% form_theme form 'AseagleBundle:Form:fields.html.twig' %}
{% block dashboard_local_css %}
    <link rel="stylesheet" href="{{ asset('bundles/libs/css/product.css') }}" />
{% endblock %}
    {% block dashboard_content %}
        <div><div class="col-md-2"></div><h1>New Wish Product</h1></div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <div class="col-xs-4 col-md-4 cat-tree-0">
                    <form role="form">
                        <div class="form-group">
                            <!--input class="form-control" id="searchinput" type="search" placeholder="Search..."-->
                        </div>
                        <div id="searchlist" class="list-group">
                        </div>
                    </form>
                </div>

                <div class="col-xs-4 col-md-4 cat-tree-1">
                    <form role="form">
                        <div class="form-group">
                            <!--input class="form-control" id="searchinput" type="search" placeholder="Search..."-->
                        </div>
                        <div id="searchlist" class="list-group">

                        </div>
                    </form>
                </div>

                <div class="col-xs-4 col-md-4 cat-tree-2">
                    <form role="form">
                        <div class="form-group">
                            <!--input class="form-control" id="searchinput" type="search" placeholder="Search..."-->
                        </div>
                        <div id="searchlist" class="list-group">

                        </div>
                    </form>
                </div>

                <div class="col-xs-4 col-md-4 cat-tree-3">
                    <form role="form">
                        <div class="form-group">
                            <!--input class="form-control" id="searchinput" type="search" placeholder="Search..."-->
                        </div>
                        <div id="searchlist" class="list-group">

                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class='hide'>{{ form_row(form.category,{ 'id': 'select_category'}) }}</div>
        {{ form_row(form.country) }}
        {{ form_row(form.title) }}
        {{ form_row(form.price) }}
        {{ form_row(form.currency) }}
        {{ form_row(form.save) }}
        {{ form_end(form) }}
    {% endblock %}

    {% block dashboard_local_footer_libs %}
        <script src="{{ asset('bundles/libs/vendor/bootstrap/js/bootstrap-list-filter.min.js') }}"></script>
        <script src="{{ asset('bundles/libs/js/dashboard/upload.js') }}"></script>
        <script>
            $(function(){
                _AsgDashboard.Upload.set_form_upload_product();
            });
        </script>
    {% endblock %}