{% extends 'AseagleBundle::seller_layout.html.twig' %}

    {% block seller_content %}
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Certificates</h1>
            </div>
        </div>
        <!-- /.row -->
        {% for c in certifications %}
            <!-- Portfolio Item Row -->
            <div class="row">
                <div class="col-md-6">
                    <img class="img-responsive" width="500" height="300" src="{{ image_helper.generate_one_large_image_url(c.image) }}" alt="">
                </div>

                <div class="col-md-6">
                    <h3>{{ c.name }}</h3>
                    <ul>
                        <li>Type: {{ c.type }}</li>
                        <li>Issued By: {{ c.issuedBy|date("d/m/Y") }}</li>
                        <li>Start Date: {{ c.startDate|date("d/m/Y") }}</li>
                        <li>End Date: {{ c.endDate|date("d/m/Y") }}</li>
                        <li>Scope: {{ c.scope }}</li>
                    </ul>
                </div>
            </div>
            <hr>
        {% endfor %}

    {% endblock %}
