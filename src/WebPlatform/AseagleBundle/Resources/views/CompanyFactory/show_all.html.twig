{% extends 'AseagleBundle::seller_layout.html.twig' %}

    {% block seller_content %}
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Factories</h1>
            </div>
        </div>
        <!-- /.row -->
        {% for f in factories %}
            <!-- Portfolio Item Row -->
            <div class="row">
                <div class="col-md-6">
                    <img class="img-responsive" width="500" height="300" src="{{ image_helper.generate_one_large_image_url(f.picture) }}" alt="">
                </div>

                <div class="col-md-6">
                    <h3>{{ f.name }}</h3>
                    <ul>
                        <li>Country</li>
                        <li>Year Cooperation: {{ f.yearCooperation|date("d/m/Y") }}</li>
                        <li>Total Transaction: {{ f.totalTransaction }}</li>
                        <li>Product Capacity: {{ f.productCapacity }}</li>
                    </ul>
                </div>
            </div>
            <hr>
        {% endfor %}

    {% endblock %}