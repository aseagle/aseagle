{% form_theme form 'FOSUserBundle:Form:fields.html.twig' %}
<div class="col-70-auto">
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_resetting_reset">
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-6"><h4>Password Reset</h4></div>
        </div>
        {{ form_widget(form) }}
        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-6">
                <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
    </form>
</div>
